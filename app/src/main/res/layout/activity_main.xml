<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kiko.studentcard.MainActivity">

    <ImageView
        android:src="@drawable/card"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/ic_android_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="8dp"
        android:paddingRight="8dp" />


    <!--textcolor #1565C0 is blue 600 (Materialdesign)-->



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/u"
        android:textSize="48sp"
        android:textColor="#1565C0"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="U" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/d"
        android:textSize="48sp"
        android:textColor="#1565C0"
        android:textStyle="bold"
        android:text="D"
        android:layout_below="@id/u"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/a"
        android:textSize="48sp"
        android:textColor="#1565C0"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/d"
        android:text="A" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c"
        android:textSize="48sp"
        android:textColor="#1565C0"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/a"
        android:text="C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i"
        android:textSize="48sp"
        android:textColor="#1565C0"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/c"
        android:text="I" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t"
        android:textSize="48sp"
        android:textColor="#1565C0"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/i"
        android:text="T" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/y"
        android:textSize="48sp"
        android:textColor="#1565C0"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@id/t"
        android:text="Y" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="#ff0000"
        android:text="Fragargon "
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_alignBottom="@id/u" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/school"
        android:textColor="#ff0000"
        android:text="Nanodegree"
        android:layout_below="@id/name"
        android:layout_alignLeft="@id/name"
        android:layout_alignStart="@id/name" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/school3"
        android:textColor="#ff0000"
        android:text="android basic "
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/school2"
        android:textColor="#ff0000"
        android:text="program   "
        android:layout_above="@id/school3"
        android:layout_alignLeft="@id/school3"
        android:layout_alignStart="@id/school3" />

</RelativeLayout>
